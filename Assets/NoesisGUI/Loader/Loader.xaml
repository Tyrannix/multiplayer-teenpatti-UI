<UserControl x:Class="Multiplayer_Teenpatti.Assets.NoesisGUI.Loader.Loader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Multiplayer_Teenpatti.Assets.NoesisGUI.Loader"
             xmlns:noesis="clr-namespace:NoesisGUIExtensions;assembly=Noesis.GUI.Extensions"
             mc:Ignorable="d" Width="{x:Static SystemParameters.PrimaryScreenWidth}"  
                Height="{x:Static SystemParameters.PrimaryScreenHeight}" SnapsToDevicePixels="True">
    <Grid>
        <noesis:RiveControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Assets/NoesisGUI/Loader/loader.riv">
            <noesis:RiveInput InputName="LoadComplete" InputValue="{Binding LoaderComplete}" />
        </noesis:RiveControl>
    </Grid>
</UserControl>
